#include <iostream>

using namespace std;

int main()
{
    cout << " ______________________ " << endl;
    cout << "|                      |" << endl;
    cout << "|    Program Hitung    |" << endl;
    cout << "|______________________|" << endl << endl;
    // Penambahan//
    cout << "Penambahan (+)" << endl;
    int a,b;
    cout << "Masukan angka pertama             : "; cin >> a;
    cout << "Masukan angka yang akan di tambah : "; cin >> b;
    cout << a << " + " << b << " = " << a+b << endl << endl;
    //Pengurangan//
    cout << "Pengurangan (-)" << endl;
    cout << "Masukan angka pertama             : "; cin >> a;
    cout << "Masukan angka yang akan di kurangi: "; cin >> b;
    cout << a << " - " << b << " = " << a-b << endl << endl;
    //Perkalian//
    cout << "Perkalian (*)" << endl;
    cout << "Masukan angka pertama             : "; cin >> a;
    cout << "Masukan angka yang akan di kali   : "; cin >> b;
    cout << a << " * " << b << " = " << a*b << endl << endl;
    //Pembagian//
    cout << "Pembagian (/)" << endl;
    cout << "Masukan angka pertama             : "; cin >> a;
    cout << "Masukan angka yang akan di bagi   : "; cin >> b;
    cout << a << " / " << b << " = " << a/b << endl << endl;





    return 0;
}
